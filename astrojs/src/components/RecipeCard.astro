---
import {baseUrl} from "../api/drupal";
import {Image} from "astro:assets";
const {recipe} = Astro.props;
---




<article
  class="relative flex flex-col p-4 space-y-4 overflow-hidden bg-white border border-border group"
>
  <h2 class="flex-1 font-serif text-[1.42rem]">{recipe.title}</h2>
    {recipe.field_difficulty && (
      <p class="text-[0.889rem] capitalize text-gray-darker">
        <span class="font-semibold">Difficulty:</span>{" "}
          {recipe.field_difficulty}
      </p>
    )}
  <Image src={baseUrl + recipe.field_media_image.field_media_image.uri.url} width={335} height={225} alt={recipe.title}/>
    <a href={recipe.path.alias} class="inline-flex items-center uppercase hover:underline text-link">
        View recipe
      <svg
        class="w-5 h-5 ml-1"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
      >
        <path d="m9 18 6-6-6-6" />
      </svg>
    </a>
</article>