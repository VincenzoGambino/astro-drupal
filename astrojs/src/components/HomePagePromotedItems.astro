---
import {getPromotedArticles} from "../api/drupal";
import ArticleCard from "./ArticleCard.astro";
import RecipeCardPromoted from "./RecipeCardPromoted.astro";
import {getPromotedRecipes} from "../api/drupal";
const recipes = await getPromotedRecipes(2);
const articles = await getPromotedArticles();
---


<div
  class="container max-w-[1200px] grid gap-8 py-8 sm:grid-cols-2 lg:grid-cols-[2fr_1fr_1fr]">
    {articles?.length ? articles.map((article) => {
        return <ArticleCard article={article} key={article.id}/>
    }) : null}
    {recipes?.length ? recipes.map((recipe) => {
        return <RecipeCardPromoted recipe={recipe} key={recipe.id}/>
    }) : null}
</div>