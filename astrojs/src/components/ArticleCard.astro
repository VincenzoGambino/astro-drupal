---
import {baseUrl} from "../api/drupal";
import {Image} from "astro:assets";
const {article} = Astro.props
---
<article
  class="relative flex flex-col p-4 space-y-4 overflow-hidden bg-white border border-border group col-span-1 sm:col-span-2 lg:col-span-1">
  <div class="flex flex-col flex-1 space-y-4">
    <h2 class="flex-1 font-serif text-[1.424rem]">{article.title}</h2>

    <div class="media__content image__wrapper">
      <Image src={baseUrl + article.field_media_image.field_media_image.uri.url}
             alt={article.title} width="768" height="190"/>
    </div>
    <a class="inline-flex items-center uppercase hover:underline text-link"
       href={article.path.alias.replace("internal:en/", "")}>
      View Article
      <svg
        class="w-5 h-5 ml-1"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m9 18 6-6-6-6"/>
      </svg>
    </a>
  </div>
</article>